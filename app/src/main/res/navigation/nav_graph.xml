<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/nav_graph"
            app:startDestination="@id/searchFragment">

    <fragment android:id="@+id/searchFragment"
              android:name="dev.juricaplesa.moviesapp.search.SearchFragment"
              android:label="SearchFragment">
        <action android:id="@+id/action_searchFragment_to_detailsFragment"
                app:destination="@id/detailsFragment"/>
    </fragment>

    <fragment android:id="@+id/detailsFragment"
              android:name="dev.juricaplesa.moviesapp.details.DetailsFragment"
              android:label="DetailsFragment">
        <action android:id="@+id/action_detailsFragment_to_searchFragment"
                app:destination="@id/searchFragment"/>
        <argument
                android:name="moviesImdbId"
                app:argType="string"/>
    </fragment>

</navigation>